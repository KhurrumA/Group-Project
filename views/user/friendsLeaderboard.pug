extends ../../views/base

block content
  include  ../../views/headerCourse
  .main-container
    include navUser 
    .content
      .table-title Leaderboard
      br
      table#Leaderboard_table
        thead 
          tr
            th Username
            th Points
            th Rank
        tbody
          if leaderboard.length === 0
            tr
              td(colspan="3") No friends in the leaderboard
          else
            each user in leaderboard
              tr
                td= user.name
                td= user.points
                td= user.Rank

