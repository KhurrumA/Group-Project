extends base

block content 
    include _header
    .container-dashboard
        .text 
            h1 Welcome to your SkillsBuild Dashboard!
            p= `Your current points balance is ${user.points}.`
    .line
    if courses 
        h2.heading-secondary.heading-quick.ma-bt-lg.heading= `Your are currently enrolled in ${courses.length} course/s.`
        .card-wrapper
            each course in courses
                .card.mb-3(style="max-width: 540px")
                    .row.g-0 
                        .col-md-4 
                            img.img-fluid-rounded-start(src='img/courses/course-1.png' alt='Course image')
                        .col-md-8 
                            .card-body 
                                h5.card-title= course.name
                                p.card-text= course.summary 
                    .card__footer__dashboard
                        a.card__footer.ml-4.text-blue-500.border.rev.border-blue-500.font-medium.py-2.px-4.rounded.nav__el-courses(href=`/review/${course.slug}`) Review
                        a.card__footer.ml-4.border.revc.border-blue-500.font-medium.py-2.px-4.rounded.nav__el-courses(href=`/courseOverview/${course.slug}`) Continue 
    else
        h2.heading-secondary.heading-quick.ma-bt-lg.heading You are not enrolled in any course. 
    

