extends base

block content 
    include _header
    .container-dashboard
        .text 
            h1 Welcome to your SkillsBuild Dashboard!
            p= `Your current points balance is ${user.points}.`
    .line
    if courses 
        h2.heading-secondary.heading-quick.ma-bt-lg.heading= `Your are currently enrolled in ${courses.length} course/s.`
        .card-wrapper
            each course in courses
                .card.mb-3(style="max-width: 540px")
                    .row.g-0 
                        .col-md-4 
                            img.img-fluid-rounded-start(src=`img/courses/${course.imageCover}` alt=`${course.name}`)
                        .col-md-8 
                            .card-body 
                                h5.card-title= course.name
                                p.card-text= course.summary 
                    .card__footer__dashboard
                        a.card-text= `Started: ${progress.timeStart ? course.progress.timeStart.toLocaleDateString() : 'Not available'}`
                        a.card-text= `Finished: ${progress.timeCompleted ? course.progress.timeCompleted.toLocaleDateString() : 'Not available'}`
                        a.card__footer.ml-4.text-blue-500.border.rev.border-blue-500.font-medium.py-2.px-4.rounded.nav__el-courses(href=`/review/${course.slug}`) Review
                        a.startCourse.card__footer.ml-4.border.revc.border-blue-500.font-medium.py-2.px-4.rounded.nav__el-courses(data-course-id=course._id href=`/courseOverview/${course.slug}`) Continue 
    else



